<!-- Comments Show Modal -->
<div class="modal fade" id="commentsShowModal" tabindex="-1" role="dialog" aria-labelledby="commentsShowModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
        <h5 class="modal-title" id="commentsShowModalLabel">What people said...
            <% if(!currentUser){ %>
                <br/><small class="text-muted"><em>Login to post a comment</em></small>
            <% } %>
        </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        </div>
        <div class="modal-body">
        </div>
        <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
    </div>
</div>